keycode 71 = 5 F5 F5 F5 F5 F5 XF86Switch_VT_5
keycode 72 = 6 F6 F6 F6 F6 F6 XF86Switch_VT_6
keycode 73 = 7 F7 F7 F7 F7 F7
keycode 74 = 8 F8 F8 F8 F8 F8
